---
interface Props {
  id: string;
  title: string;
  img_url: string;
  description: string;
  tags: string[];
}

const { id, title, img_url, description, tags } = Astro.props;
const lang = Astro.url.pathname.split('/')[1];
---

<a href={`/${lang}/blog/${id}`} class="block">
  <article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all">
    <img src={img_url} alt={title} class="w-full h-48 object-cover" />
    <div class="p-4">
      <h3 class="font-bold text-xl mb-2">{title}</h3>
      <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <span class="bg-primary/10 text-primary px-2 py-1 rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </article>
</a>