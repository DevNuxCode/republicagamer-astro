---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo and Slogan -->
      <div class="space-y-4">
        <div class="flex items-center space-x-2">
          <img 
            src="/logo_blanco.png" 
            alt="LaRepublicaGamer Logo" 
            class="w-8 h-8"
          />
          <span class="text-xl font-bold">LaRepublicaGamer</span>
        </div>
        <p class="text-gray-400">
          {lang === 'es' 
            ? 'Tu destino definitivo para noticias, reseñas y contenido gaming' 
            : 'Your ultimate destination for gaming news, reviews, and content'}
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="text-lg font-bold mb-4">{lang === 'es' ? 'Navegación' : 'Navigation'}</h3>
        <ul class="space-y-2">
          <li>
            <a href={`/${lang}`} class="text-gray-400 hover:text-white transition-colors">
              {lang === 'es' ? 'Inicio' : 'Home'}
            </a>
          </li>
          <li>
            <a href={`/${lang}/videos`} class="text-gray-400 hover:text-white transition-colors">
              {lang === 'es' ? 'Videos' : 'Videos'}
            </a>
          </li>
          <li>
            <a href={`/${lang}/blog`} class="text-gray-400 hover:text-white transition-colors">
              {lang === 'es' ? 'Noticias' : 'News'}
            </a>
          </li>
        </ul>
      </div>

      <!-- Social Media -->
      <div>
        <h3 class="text-lg font-bold mb-4">{lang === 'es' ? 'Redes Sociales' : 'Social Media'}</h3>
        <ul class="space-y-2">
          
            <li>
                <a 
                  href="https://twitch.tv/larepublicagamercl" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-400 hover:text-white transition-colors flex items-center space-x-2"
                >
                  <span>Twitch</span>
                </a>
              </li>
          
          
          
          
            <li>
            <a 
              href="https://discord.gg/4n5PxHBahT" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors flex items-center space-x-2"
            >
              <span>Discord</span>
            </a>
          </li>
          <li>
            <a 
              href="https://www.instagram.com/larepublicagamer/" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors flex items-center space-x-2"
            >
              <span>Instagram</span>
            </a>
          </li>
          <li>
            <a 
              href="https://x.com/larepublicagame" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors flex items-center space-x-2"
            >
              <span>X (Twitter)</span>
            </a>
          </li>
          <li>
            <a 
              href="https://www.youtube.com/channel/UCXuB9-qYDS5eT6ddT6okmJA" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors flex items-center space-x-2"
            >
              <span>YouTube</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-lg font-bold mb-4">{lang === 'es' ? 'Contacto' : 'Contact'}</h3>
        <div class="space-y-2 text-gray-400">
          <p>{lang === 'es' ? 'Únete a nuestra comunidad en Discord' : 'Join our Discord community'}</p>
          <a 
            href="https://discord.gg/4n5PxHBahT" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-block bg-primary text-white px-4 py-2 rounded-full hover:opacity-90 transition-opacity"
          >
            {lang === 'es' ? 'Unirse al Discord' : 'Join Discord'}
          </a>
        </div>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
      <p>&copy; 2025 LaRepublicaGamer ®. {t('footer.rights')}</p>
    </div>
  </div>
</footer>